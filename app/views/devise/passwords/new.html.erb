<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Mot de passe oublié ?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "shared/devise_errors" %>
    <div class="form-group">
      <p>Saisissez l'adresse e-mail associé à votre compte .
      Nous vous enverons un lien par e-mail pour réinitialiser votre mot de passe</p>
      <%= f.email_field :email, autofocus: true,class:"form-control", placeholder:"E-mail" %>
    </div>

    <div class="actions">
      <%= f.submit "Réinitialiser mon mot de passe", class:"btn btn-primary" %>
    </div>
    <% end %>


  </div>
</div>
