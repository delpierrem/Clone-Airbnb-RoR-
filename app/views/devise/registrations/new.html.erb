<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.text_field :fullname, class: "form-control", placeholder: "Nom complet (prÃ©nom + nom)" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "Adresse e-mail" %>
    </div>

    <div class="form-group">
      <!-- <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br /> -->
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>
    </div>

    <div class="form-group">
      <%= f.file_field :avatar %>
    </div>

    <div class="actions">
      <%= f.submit "Inscription", class:"btn btn-primary" %>
    </div>
    <% end %>

    <!-- <%= render "devise/shared/links" %> -->
  </div>
</div>
